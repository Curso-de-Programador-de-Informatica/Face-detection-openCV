{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++11",
                "-IC:/opencv/build/include",
                "-LC:/opencv/build/x64/vc16/lib",
                "-lopencv_world4100",
                "-o",
                "${workspaceFolder}/Face-detection-openCV/Facial_Recognition.exe",
                "${workspaceFolder}/Face-detection-openCV/Facial_Recognition.cpp"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Tarefa gerada automaticamente pelo VS Code."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe arquivo de build ativo",
            "command": "C:/mingw64/bin/gcc.exe",
            "args": [
                "-std=c++11",
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "C:/mingw64/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Tarefa gerada pelo Depurador."
        }
    ]
}
